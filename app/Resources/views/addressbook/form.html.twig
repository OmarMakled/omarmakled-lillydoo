{% extends 'base.html.twig' %}
{% block body %}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">We want to be more for you!</h5>
        <hr>
        {{ form_start(form) }} 
        <div class="row">
            <div class="col">{{ form_row(form.firstname) }}</div>
            <div class="col">{{ form_row(form.lastname) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.phone) }}</div>
            <div class="col">{{ form_row(form.email) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.country) }}</div>
            <div class="col">{{ form_row(form.city) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.address) }}</div>
            <div class="col">{{ form_row(form.zip) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.birthday) }}</div>
            <div class="col">
                {{ form_label(form.photo) }} <small>*.jpg, *.png, *.jpeg</small>
                {{ form_widget(form.photo) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block" formnovalidate>Save</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}